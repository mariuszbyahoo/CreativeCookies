
@{
    ViewData["Title"] = "ConfirmEmail";
    var userName = Model.Username;
}
@model CreativeCookies.IdSrv.Quickstart.Account.ConfirmEmailViewModel

<h2>ConfirmEmail</h2>

<div class="container">
    <p>Dear <b>@Model.Username</b> You have not confirmed your e-mail address yet.</p>
    @User.Identity.Name
    <p>You may @Html.ActionLink("Resend activation link", "ResendLink", "Account", Model); </p>
    <p>Or:<a href="@Model.ReturnUrl">Login Page</a> </p>
</div>